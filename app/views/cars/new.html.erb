					<td><%= c.text_field :volumen_interior, :value => '0', :placeholder => 'Volumen Interior'%></td>
					<td><%= c.text_field :cap_maleta, :value => '0', :placeholder => 'Capacidad Maleta'%></td>
					<td><%= c.text_field :cap_estanque, :value => '0', :placeholder => 'Capacidad Estanque'%></td>
					<td><%= c.text_field :largo_pickup, :value => '0', :placeholder => 'Largo Pickup'%></td>
					<td><%= c.text_field :ancho_pickup, :value => '0', :placeholder => 'Ancho Pickup'%></td>
					<td><%= c.text_field :alto_pickup, :value => '0', :placeholder => 'Alto Pickup'%></td>
				<!-- GUARDAR -->
					<td><%= submit_tag 'Guardar', :class => "btn"%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
