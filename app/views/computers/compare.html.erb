<div class="container">
	<h1>Comparación de Computadores</h1>
	<div class="row">
		<div class="span12">
			<h3>Equipo</h3>
			<div class="row">
				<div class="span12">
					<table class="table table-bordered compare-table <%= 'compare-'+ @items_to_compare.to_s %>">
						<tr>
							<th>Imagen</th>
							<% @selected_items.each do |i| %>
							<td> <%= image_tag i.img_ref, :size => '100x100'%></td>
								<% end %>
						</tr>
						<tr>
							<th>Equipo</th>
							<% @selected_items.each do |i| %>
							<td><%= Marca.find(i.marca_id).nombre_marca+' '+i.modelo%></td>
							<% end %>
						</tr>
						<tr>
							<th>Sistema Operativo</th>
							<% @selected_items.each do |i| %>
							<td> <%= ComputersSo.find(i.sist_operativo_id).sist_operativo%></td>
								<% end %>
						</tr>
						<tr>
							<th>Precio Referencial</th>
							<% @selected_items.each do |i| %>
							<td> <%= number_to_currency(i.precio, :unit => '$', :precision => 0)%></td>
								<% end %>
						</tr>
					</table>
				</div>
			</div>
			<h3>Procesador</h3>
			<div class="row">
				<div class="span12">
					<table class="table table-bordered compare-table <%= 'compare-'+ @items_to_compare.to_s %>">
						<tr>
							<th>Marca</th>
							<% @selected_items.each do |i| %>
							<td> <%= ComputersProce.find(i.proce_marca_id).marca%></td>
						<% end %>
						</tr>
						<tr>
							<th>Modelo</th>
							<% @selected_items.each do |i| %>
							<td> <%= i.proce_version.upcase%></td>
						<% end %>
						</tr>
						<tr>
							<th>Velocidad</th>
							<% @selected_items.each do |i| %>
							<td> <%= i.proce_velocidad %> GHz</td>
						<% end %>
						</tr>
						<tr>
							<th>Nucleos</th>
							<% @selected_items.each do |i| %>
							<td> <%= i.proce_nucleos%></td>
						<% end %>
						</tr>
					</table>
				</div>
			</div>

			<h3> Batería</h3>
			<div class="row">
				<div class="span12">
					<table class="table table-bordered compare-table <%= 'compare-'+ @items_to_compare.to_s %>">
						<tr>
							<th>Tipo</th>
							<% @selected_items.each do |i| %>
