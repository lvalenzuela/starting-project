							<% end %>
						</tr>
						<tr>
							<th>Celdas</th>
							<% @selected_items.each do |i| %>
							<td><%= i.bateria_celdas%></td>
							<% end %>
						</tr>
						<tr>
							<th>Duración</th>
							<% @selected_items.each do |i| %>
							<td><%= i.bateria_duracion%></td>
							<% end %>
						</tr>
					</table>
				</div>
			</div>

			<h3>Memoria</h3>
			<div class="row">
				<div class="span12">
					<table class="table table-bordered compare-table <%= 'compare-'+ @items_to_compare.to_s %>">
