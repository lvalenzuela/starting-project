<div class="container">	
	<h1>Ingresar Nuevos Computadores</h1>
	<%= form_for :marca_id, :url => new_computer_path do |fl| %>
		<table class="table">
			<tr>
				<th>Buscar por Marca</th>
				<td><%= fl.select 'value', marcas_select('computadores', 'ASC')%></td>
				<td><%= submit_tag 'Buscar', :class => 'btn'%></td>
			</tr>
		</table>
	<% end %>
	<%= link_to "Alternativa", alternative_new_computers_path %>
	
	<table class="table table-bordered">
		<% @aditional_features.each do |ft| %>
		<tr>
			<td><%= ft.feature%></td>
		</tr>
		<% end %>
		
		<%= form_for :new_feature, :url => new_feature_computers_path do |f|%>
		<tr>
			<td><%= f.text_field :feature, :placeholder => 'Nueva Caracteristica' %></td>
		</tr>
		<tr>
			<td><%= f.submit 'Agregar Caracteristica', :class => 'btn'%></td>
		</tr>
		<% end %>
	</table>
	
	<table class="table table-bordered table-striped input-table">
		<thead>
			<tr>
				<th>Delete</th>
				<th>Edit</th>
				<th>Preview Image</th>
				<th>Imagen</th>
				<th>Marca</th>
				<th>Categoría</th>
				<th>Modelo</th>
				<th>Sistema Operativo</th>
				<th>Precio</th>
				<th>Material Batería</th>
				<th>N° Celdas Batería</th>
				<th>Duración Bateria</th>
				<th>Marca Procesador</th>
				<th>Versión Procesador</th>
				<th>Velocidad Procesador [GHz]</th>
				<th>N° Núcleos</th>
				<th>Cantidad Memoria [GB]</th>
				<th>Tipo Memoria</th>
				<th>Velocidad Memoria [MHz]</th>
				<th>Máximo Memoria [GB]</th>
				<th>N° Ranuras Memoria</th>
				<th>Capacidad Disco Duro [GB]</th>
				<th>Velocidad Disco Duro [RPM]</th>
				<th>Disco Duro SSD [GB]</th>
				<th>Tamaño Pantalla [in]</th>
				<th>Resolución</th>
				<th>Tipo Pantalla</th>
				<th>Pantalla Touch</th>
				<th>Lector Blue-Ray</th>
				<th>Grabador Blue-Ray</th>
				<th>Lector DVD</th>
				<th>Grabador DVD</th>
				<th>Tarjeta de Video</th>
				<th>Cantidad Memoria T. Video</th>
				<th>Tipo de Memoria T.Video</th>
				<th>Webcam</th>
				<th>Lector Tarjetas de Memoria</th>
				<th>Ethernet</th>
				<th>HDMI</th>
				<th>VGA</th>
				<th>Wi-Fi</th>
				<th>Bluetooth</th>
				<th>USB 2.0</th>
				<th>USB 3.0</th>
				<th>Largo [mm]</th>
				<th>Ancho [mm]</th>
				<th>Alto [mm]</th>
				<th>Peso [kg]</th>
				<th>Guardar</th>
			</tr>
		</thead>
		<tbody>
			<% if !@computers.empty? %>
				<% @computers.each do |computer|%>
			
					<tr>
						<td><%= button_to 'Delete', computer, :confirm => 'Segurito?', :method => 'delete', :class => 'btn'%></td>
						<td><%= button_to 'Edit', edit_computer_path(computer), :class => 'btn'%></td>
						<td><%= image_tag computer.img_ref, :size => '120x120'%></td>
						<td><%= image_tag computer.img_ref, :size => '120x120'%></td>
						<td><%= Marca.find(computer.marca_id).nombre_marca%></td>
						<td><%= ComputersCategory.find(computer.categoria).category%></td>
						<td><%= computer.modelo.upcase %></td>
						<td><%= ComputersSo.find(computer.sist_operativo_id).sist_operativo%></td>
						<td><%= computer.precio%></td>
						<td><%= computer.bateria%></td>
						<td><%= computer.bateria_celdas%></td>
						<td><%= computer.bateria_duracion%></td>
						<td><%= ComputersProce.find(computer.proce_marca_id).marca%></td>
						<td><%= computer.proce_version%></td>
						<td><%= computer.proce_velocidad%></td>
						<td><%= computer.proce_nucleos%></td>
						<td><%= computer.memoria%></td>
						<td><%= ComputersMemoria.find(computer.memoria_tipo).tipo%></td>
						<td><%= computer.memoria_velocidad%></td>
						<td><%= computer.memoria_max%></td>
						<td><%= computer.memoria_ranuras%></td>
						<td><%= computer.disco_capacidad%></td>
						<td><%= computer.disco_velocidad%></td>
						<td><%= computer.disco_ssd%></td>
						<td><%= DisplaySize.find(computer.screen_size).size%></td>
						<td><%= DisplayResolution.find(computer.screen_resol).resolution%></td>
						<td><%= DisplayTech.find(computer.screen_type).nombre%></td>
						<td><%= computer.screen_touch%></td>
						<td><%= computer.lector_blue_ray%></td>
						<td><%= computer.grabador_blue_ray%></td>
						<td><%= computer.lector_dvd%></td>
						<td><%= computer.grabador_dvd%></td>
						<td><%= computer.video_modelo%></td>
						<td><%= computer.video_memoria%></td>
						<td><%= ComputersMemoria.find(computer.video_tipo_memoria).tipo%></td>
						<td><%= computer.webcam%></td>
						<td><%= computer.lector_tarjeta_memoria%></td>
						<td><%= computer.ethernet%></td>
						<td><%= computer.hdmi%></td>
						<td><%= computer.vga%></td>
						<td><%= RedProtocol.find(computer.wifi).nombre%></td>
						<td><%= RedProtocol.find(computer.bluetooth).nombre%></td>
						<td><%= computer.usb_2%></td>
						<td><%= computer.usb_3%></td>
						<td><%= computer.largo%></td>
						<td><%= computer.ancho%></td>
						<td><%= computer.profundidad%></td>
						<td><%= computer.peso%></td>
						<td> </td>
					</tr>
				<% end %>
			<% else %>
			<tr>
				<td colspan="44">No se encontró información relacionada con los parametros seleccionados</td>
			</tr>
			<% end %>
			
			<%= form_for(@computer) do |c|%>
				<tr>
					<td><%= link_to "Alternativa", alternative_new_computers_path %></td>
					<td><%= link_to "Edit", cars_new_path, :class => "btn", :disabled => "disabled" %></td>
					<td><div id="new-product-img-preview"><%= image_tag 'computer_images/not_found.png', :size => '100x100'%></div></td>
					<td><%= c.text_field :img_ref, :value => 'computer_images/not_found.png', :id => 'new_product_img'%></td>
					<td><%= c.select :marca_id, marcas_select('computadores', 'ASC')%></td>
					<td><%= c.select :categoria, ComputersCategory.all.collect{|c| [c.category, c.id]}, {:selected => 2}%></td>
					<td><%= c.text_field :modelo, :value => ''%></td>
					<td><%= c.select :sist_operativo_id, ComputersSo.all.collect{|s| [s.sist_operativo, s.id]}, {:selected => 1}%></td>
					<td><%= c.text_field :precio, :value => ''%></td>
					<td><%= c.text_field :bateria, :valie => ' '%></td>
					<td><%= c.select :bateria_celdas, options_for_select(select_options('numbers'),4)%></td>
					<td><%= c.text_field :bateria_duracion, :value => ''%></td>
					<td><%= c.select :proce_marca_id, ComputersProce.all.collect{|p| [p.marca, p.id]}, {:selected => 2}%></td>
					<td><%= c.text_field :proce_version, :value => ''%></td>
					<td><%= c.text_field :proce_velocidad, :value => ''%></td>
					<td><%= c.select :proce_nucleos, options_for_select(select_options('numbers'), 2)%></td>
					<td><%= c.select :memoria, options_for_select(select_options('numbers'), 4)%></td>
					<td><%= c.select :memoria_tipo, ComputersMemoria.all.collect{|m| [m.tipo, m.id]}, {:selected => 3}%></td>
					<td><%= c.text_field :memoria_velocidad, :value => ''%></td>
					<td><%= c.select :memoria_max, options_for_select(select_options('numbers'), 4)%></td>
					<td><%= c.select :memoria_ranuras, options_for_select(select_options('numbers'), 2)%></td>
					<td><%= c.text_field :disco_capacidad, :value => ''%></td>
					<td><%= c.text_field :disco_velocidad, :value => ''%></td>
					<td><%= c.text_field :disco_ssd, :value => ''%></td>
					<td><%= c.select :screen_size, display_size_select('computadores', 'ASC')%></td>
					<td><%= c.select :screen_resol, DisplayResolution.find(:all, :order => 'resolution ASC').collect{|r| [r.resolution, r.id]}%></td>
					<td><%= c.select :screen_type, display_tech_select('computadores', 'ASC')%></td>
					<td><%= c.select :screen_touch, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.select :lector_blue_ray, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.select :grabador_blue_ray, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.select :lector_dvd, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.select :lector_dvd, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.text_field :video_modelo, :value => ''%></td>
					<td><%= c.text_field :video_memoria, :placeholder => '[MB/GB]'%></td>
					<td><%= c.select :video_tipo_memoria, ComputersMemoria.all.collect{|m| [m.tipo,m.id]}, {:selected => 5}%></td>
					<td><%= c.select :webcam, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.text_field :lector_tarjeta_memoria %></td>
					<td><%= c.select :ethernet, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.select :hdmi, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.select :vga, options_for_select(select_options('boolean'),0)%></td>
					<td><%= c.select :wifi, red_select('wifi')%></td>
					<td><%= c.select :bluetooth, red_select('bluetooth')%></td>
					<td><%= c.select :usb_2, options_for_select(select_options('numbers'),1)%></td>
					<td><%= c.select :usb_3, options_for_select(select_options('numbers'),1)%></td>
					<td><%= c.text_field :largo, :value => ''%></td>
					<td><%= c.text_field :ancho, :value => ''%></td>
					<td><%= c.text_field :profundidad, :value => ''%></td>
					<td><%= c.text_field :peso, :value => ''%></td>
					<td><%= c.submit :class => 'btn'%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
