<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide">
  <div class="carousel-inner">
    <div class="item active">
    	<%= image_tag 'BMW-750LI-instrument-panel.jpg' %>
      <div class="container">
        <div class="carousel-caption">
          <h1>Busca tu Vehiculo</h1>
          <p class="lead">Compara las características de tu auto con el resto de los vehículos disponibles en el mercado. Crea una cuenta y guarda tus preferencias!</p>
          <a class="btn btn-large btn-primary" href="#">Crear Cuenta</a>
        </div>
      </div>
    </div>
    <div class="item">
    	<%= image_tag 'gt-panel-nissan-782339.jpg' %>
      <div class="container">
        <div class="carousel-caption">
          <h1>Encuentra el Ideal!</h1>
          <p class="lead">Compara precios y caracteristicas!Encuentra todos los datos necesarios para encontrar el vehículo que satisfaga tus necesidades.</p>
          <a class="btn btn-large btn-primary" href="#">Ver Más</a>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag 'speedometer.jpg'%>
      <div class="container">
        <div class="carousel-caption">
          <h1>Nuevas Marcas y Modelos!</h1>
          <p class="lead">Enterate de las nuevas marcas y modelos disponibles en el mercado!</p>
          <a class="btn btn-large btn-primary" href="#">Ver Galería</a>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div><!-- /.carousel -->



